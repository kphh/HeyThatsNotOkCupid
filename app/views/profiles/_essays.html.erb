<div class="essay" id="summary">
  <% profile.summary.empty? ? button_text = "Fill out this essay!" : button_text = "Edit" %>
  <h3>My self-summary</h3>
  <p><%= profile.summary %></p>
  <%= link_to button_text, "#", class: "edit_button" if profile.user == current_user %>
</div>

