<!DOCTYPE html>
<html>
<head>
  <title>HeyThatsNotOkCupid</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section id="content">
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <p><%= error %></p>
      <% end %>
    <% end %>

    <header>
      <div class="header-wrap group">
        <img src="http://cdn.okcimg.com/blog/gaystraight/OkCupidLogo2.png" id="logo">

      <% if current_user %>
        <nav class="topnav">
          <ul>
            <li><%= link_to current_user.name, user_url(current_user) %></li>
            <li><%= button_to "Log Out", "/session", method: "delete" %></li>
          </ul>
        </nav>
      </div>
    </header>

      <nav class="sidenav">
        <ul class="group">
          <li><%= link_to "Matches", users_url %></li>
          <li><%= link_to "Messages", conversations_url %></li>
          <li><%= link_to "Visitors", "#" %></li>
          <li id="recently_visited" class="group">
            <p>Recently Visited</p>
            <ul>
              <% recently_visited.each do |user| %>
                <li><%= link_to (image_tag user.photo.url(:small)), user_url(user) %></li>
              <% end %>
            </ul>
          </li>
        </ul>
      </nav>
    <% else %>
      </div>
    </header>
    <% end %>


    <%= yield %>

  </section>
</body>
</html>
