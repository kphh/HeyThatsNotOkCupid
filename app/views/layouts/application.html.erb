<!DOCTYPE html>
<html>
<head>
  <title>HeyThatsNotOkCupid</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>

  <% if current_user %>
  <nav class="topnav">
    <ul>
      <li><%= link_to current_user.name, user_url(current_user) %></li>
      <li><%= button_to "Log Out", "/session", method: "delete" %></li>
    </ul>
  </nav>

  <nav class="sidenav">
    <p><%= link_to "Matches", root_url %></p>
    <p><%= link_to "Messages", conversations_url %></p>
    <p><%= link_to "Visitors", "#" %></p>
  </nav>
  <% end %>

<%= yield %>

</body>
</html>
