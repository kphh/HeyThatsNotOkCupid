<head>
</head>

<body>
   <h2><%= @user.name %></h2>
   <h3><%= @user.profile.age %> / <%= @user.profile.gender %> /
     <%= @user.profile.orientation %></h3>
     <!-- Add miles away -->
   <h3><%= @user.profile.location %> (--- Miles Away)</h3>

   <%= render "profiles/show", profile: @user.profile %>
   <% if my_page? %>
     <%= link_to "Edit profile", edit_profile_url(@user) %>
   <% end %>

   <%= render "details/show", detail: @user.detail %>
   <% if my_page? %>
     <%= link_to "Edit details", edit_detail_url(@user) %>
   <% end %>

   <% unless my_page? %>
     <%= link_to "Message me!", new_user_message_url(@user) %>
   <% end%>
</body>