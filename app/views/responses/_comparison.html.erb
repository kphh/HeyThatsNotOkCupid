<div id="others_page">
  <p><%= image_tag current_user.photo.url(:small) %> <%= my_resp.answer.body %></p>
  <% unless my_resp.explanation == "" %>
    <p class="explanation">"<%= my_resp.explanation %>"</p>
  <% end %>
  <p><%= link_to "Re-answer", edit_response_url(my_resp), class: "reanswer_button" %></p>
</div>

<div id="users_page">
  <p><strong><%= my_resp.question.body %></strong></p>
  <p><%= my_resp.answer.body %></p>
  <% unless my_resp.explanation == "" %>
  <p class="explanation">"<%= my_resp.explanation %>"</p>
  <% end %>
  <%= link_to "Re-answer", edit_response_url(my_resp), class: "re-answer" %>
</div>

<div id="new_response">
  <div id="question_<%= my_resp.question.id %>_response" class="question_response">
    <div class="show_response">
      <div class="response">
        <p><strong><%= my_resp.question.body %></strong></p>
        <p><%= my_resp.answer.body %></p>
        <% unless my_resp.explanation == "" %>
        <p class="explanation">"<%= my_resp.explanation %>"</p>
        <% end %>
        <%= link_to "Re-answer", edit_response_url(my_resp), class: "re-answer" %>
      </div>
      <div class="form answer_form">
        <%= render "responses/edit", question: my_resp.question, response: my_resp %>
      </div>
    </div>
  </div>
</div>

<div id="unanswered_question">
  <% if unanswered_question %>
    <%= render "responses/new", question: unanswered_question %>
  <% else %>
  <!-- necessary to remove form after final question -->
    <span></span>
  <% end %>
</div>
